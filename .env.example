# Database connection (AWS RDS Dev via VPN)
# Get credentials: aws secretsmanager get-secret-value --secret-id "/tg-template/rds/credentials/master" --profile upov-dev
DB_HOST=tg-template-mariadb-dev-instance.cdnp8r0mbtgi.eu-central-1.rds.amazonaws.com
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=upovtg

# OAuth (WIPO ForgeRock AM)
# Get client secret: aws secretsmanager get-secret-value --secret-id "/tg-template/clientsecretid" --profile upov-dev
OIDC_CLIENT_ID=upovtg
OIDC_CLIENT_SECRET=
OIDC_AUTHORIZATION_URI=https://logindev.wipo.int:443/am/oauth2/authorize
OIDC_TOKEN_URI=https://logindev.wipo.int:443/am/oauth2/access_token
OIDC_USERINFO_URI=https://logindev.wipo.int:443/am/oauth2/userinfo
OIDC_REDIRECT_URI=http://local-dev.wipo.int:5173/auth/callback
OIDC_SCOPES=openid email profile office address

# OAuth (Microsoft EntraID)
# Get client secret: aws secretsmanager get-secret-value --secret-id "/tg-template/entraid-client-secret" --profile upov-dev
ENTRAID_TENANT_ID=
ENTRAID_CLIENT_ID=
ENTRAID_CLIENT_SECRET=
ENTRAID_SCOPES=openid profile email User.Read

# Backend server port (local dev)
BACKEND_PORT=3001

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://local-dev.wipo.int:5173

# Dev mode: bypass OAuth (set to true to skip authentication)
DEV_BYPASS_AUTH=false
DEV_MOCK_USER=testuser

# Mail (for cron jobs)
MAIL_SERVER_NAME=email-smtp.eu-central-1.amazonaws.com
MAIL_SERVER_PORT=587
MAIL_FROM_ID=noreply@upov.int
MAIL_USERNAME=
MAIL_PASSWORD=
SEND_MAIL=FALSE
